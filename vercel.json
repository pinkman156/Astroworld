{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/api/prokerala-token", "destination": "/api/prokerala-token.js" },
    { "source": "/api/auth/prokerala", "destination": "/api/auth/prokerala.js" },
    { "source": "/api/prokerala-planet-position", "destination": "/api/prokerala-planet-position.js" },
    { "source": "/api/prokerala-kundli", "destination": "/api/prokerala-kundli.js" },
    { "source": "/api/prokerala-chart", "destination": "/api/prokerala-chart.js" },
    { "source": "/api/geocode", "destination": "/api/geocode.js" },
    { "source": "/api/env-test", "destination": "/api/env-test.js" },
    { "source": "/api/prokerala-test", "destination": "/api/prokerala-test.js" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "VITE_PROKERALA_CLIENT_ID": "${VITE_PROKERALA_CLIENT_ID}",
    "VITE_PROKERALA_CLIENT_SECRET": "${VITE_PROKERALA_CLIENT_SECRET}",
    "VITE_TOGETHER_API_KEY": "${VITE_TOGETHER_API_KEY}",
    "DEBUG": "true"
  },
  "build": {
    "env": {
      "VITE_PROKERALA_CLIENT_ID": "${VITE_PROKERALA_CLIENT_ID}",
      "VITE_PROKERALA_CLIENT_SECRET": "${VITE_PROKERALA_CLIENT_SECRET}",
      "VITE_TOGETHER_API_KEY": "${VITE_TOGETHER_API_KEY}",
      "DEBUG": "true"
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, HEAD, PUT, POST, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ],
  "buildCommand": "npm run build"
}